{
  // Explorer ------------------------------------------------------------------
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,
  "explorer.confirmDelete": true,
  // Workbench -----------------------------------------------------------------
  "workbench.iconTheme": "symbols",
  "workbench.colorTheme": "Ayu Mirage Zed", // By "EnhancedJax"
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.labelFormat": "short",
  "workbench.statusBar.visible": true,
  "workbench.tree.indent": 16,
  "workbench.navigationControl.enabled": false,
  "workbench.editor.enablePreview": false,
  "workbench.productIconTheme": "jetbrains-product-icon-theme", // by "fogio"
  "workbench.editor.empty.hint": "hidden",
  "workbench.panel.showLabels": false,
  "workbench.layoutControl.enabled": false,
  "breadcrumbs.enabled": false,
  "symbols.hidesExplorerArrows": true,
  // Editor --------------------------------------------------------------------
  "editor.fontLigatures": true,
  "editor.fontFamily": "Lilex",
  "editor.fontSize": 14,
  "editor.fontWeight": "400",
  "editor.lineHeight": 1.8,
  "editor.renderLineHighlight": "gutter",
  "editor.semanticHighlighting.enabled": false,
  "editor.minimap.enabled": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "visible",
  "editor.stickyScroll.enabled": false,
  "editor.wordWrap": "on",
  "editor.parameterHints.enabled": false,
  "editor.rulers": [80, 120],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  // Window ------------------------------------------------------------------
  "window.newWindowProfile": "Default",
  "window.menuBarVisibility": "hidden",
  "window.title": "${folderName}${separator}${activeRepositoryBranchName}",
  "window.titleSeparator": " ",
  // Terminal ----------------------------------------------------------------
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "Lilex",
  "terminal.integrated.fontWeight": "400",
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.cursorWidth": 2,
  "terminal.integrated.env.windows": {},
  "terminal.integrated.gpuAcceleration": "off",
  // Autosave ----------------------------------------------------------------
  "files.autoSave": "afterDelay",
  // Git ---------------------------------------------------------------------
  "git.openRepositoryInParentFolders": "never",
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  // Formatter ---------------------------------------------------------------
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.semi": false,
  "prettier.singleQuote": true,
  // Codesnap ----------------------------------------------------------------
  "codesnap.showLineNumbers": false
}
