{
  // Explorer ------------------------------------------------------------------
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,
  "explorer.confirmDelete": true,
  // Workbench -----------------------------------------------------------------
  "workbench.iconTheme": "ayu-mirage-zed", // by "Enhanced Jax"
  "workbench.startupEditor": "none",
  "workbench.editor.labelFormat": "short",
  "workbench.statusBar.visible": true,
  "workbench.tree.indent": 12,
  "workbench.colorTheme": "Ayu Mirage Zed", // by "Enhanced Jax"
  "workbench.navigationControl.enabled": false,
  "workbench.editor.enablePreview": false,
  "workbench.productIconTheme": "jetbrains-product-icon-theme", // by "fogio"
  "workbench.editor.empty.hint": "hidden",
  "workbench.activityBar.location": "top",
  "workbench.panel.showLabels": false,
  "workbench.layoutControl.enabled": false,
  "breadcrumbs.enabled": false,
  // Editor --------------------------------------------------------------------
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.fontWeight": "400",
  "editor.lineHeight": 1.8,
  "editor.renderLineHighlight": "gutter",
  "editor.semanticHighlighting.enabled": false,
  "editor.minimap.enabled": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "visible",
  "editor.stickyScroll.enabled": false,
  "editor.wordWrap": "on",
  "editor.parameterHints.enabled": false,
  "editor.rulers": [80, 120],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  // Window --------------------------------------------------------------------
  "window.newWindowProfile": "Default",
  "window.menuBarVisibility": "hidden",
  "window.title": "${folderName}${separator}${activeRepositoryBranchName}",
  "window.titleSeparator": " ",
  // Terminal ------------------------------------------------------------------
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontWeight": "400",
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.cursorWidth": 2,
  "terminal.integrated.env.windows": {},
  "terminal.integrated.gpuAcceleration": "off",
  // Autosave ------------------------------------------------------------------
  "files.autoSave": "afterDelay",
  // Live server extension -----------------------------------------------------
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  // Git -----------------------------------------------------------------------
  "git.openRepositoryInParentFolders": "never",
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  // Formatter -----------------------------------------------------------------
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.semi": false,
  "prettier.singleQuote": true,
  // Codesnap ------------------------------------------------------------------
  "codesnap.showLineNumbers": false,
  // Custom CSS - Extension: be5invis.vscode-custom-css ------------------------
  "vscode_custom_css.imports": ["file:///C:/Users/user/Documents/custom.css"]
}
